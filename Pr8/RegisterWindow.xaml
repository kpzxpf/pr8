<Window x:Class="Pr8.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Pr8"
        mc:Ignorable="d"
        Title="Регистрация" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Фамилия:" FontSize="14"/>
            <TextBox x:Name="lastNameTextBox" Height="30" Margin="0,5,0,10"/>
            
            <TextBlock Text="Имя:" FontSize="14"/>
            <TextBox x:Name="firstNameTextBox" Height="30" Margin="0,5,0,10"/>
            
            <TextBlock Text="Отчество:" FontSize="14"/>
            <TextBox x:Name="middleNameTextBox" Height="30" Margin="0,5,0,10"/>
            
            <TextBlock Text="Email:" FontSize="14"/>
            <TextBox x:Name="emailTextBox" Height="30" Margin="0,5,0,10"/>
            
            <TextBlock Text="Пароль:" FontSize="14"/>
            <PasswordBox x:Name="passwordBox" Height="30" Margin="0,5,0,10"/>
            
            <TextBlock Text="Подтверждение пароля:" FontSize="14"/>
            <PasswordBox x:Name="confirmPasswordBox" Height="30" Margin="0,5,0,10"/>
            
            <Button Content="Зарегистрироваться" Click="Register_Click" Background="#28A745" Foreground="White" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
